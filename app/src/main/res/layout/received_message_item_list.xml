<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:minWidth="140dp"
    android:layout_gravity="start"
    android:layout_marginStart="8dp"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    android:paddingStart="20dp"
    android:paddingEnd="1dp"
    android:paddingBottom="5dp"
    android:background="@drawable/received_message_bg"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/send_message"
        style="@style/SecondaryText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:maxWidth="280dp"
        android:layout_marginEnd="20dp"
        android:text="Message"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/send_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="5:11 pm"
        style="@style/SecondaryGrayText"
        android:textSize="16sp"
        android:layout_marginEnd="5dp"
        app:layout_constraintTop_toBottomOf="@id/send_message"
        app:layout_constraintEnd_toStartOf="@id/message_read_status"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <ImageView
        android:id="@+id/message_read_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        style="@style/IconGray"
        android:src="@drawable/ic_double_check"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>